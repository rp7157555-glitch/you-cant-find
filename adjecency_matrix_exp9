#include <stdio.h> 
#include <stdlib.h> 
#define MAX 20 
  
int adj[MAX][MAX]; // Adjacency matrix 
int visited[MAX];  // Visited array 
int n;             // Number of cities (nodes) 
  
// Depth First Search 
void DFS(int v) { 
    visited[v] = 1; 
    for (int i = 0; i < n; i++) { 
        if (adj[v][i] == 1 && !visited[i]) { 
            DFS(i); 
        } 
    } 
} 
  
int main() { 
    int edges, i, j, u, v; 
  
    printf("Enter number of cities (nodes): "); 
    scanf("%d", &n); 
  
    // Initialize adjacency matrix 
    for (i = 0; i < n; i++) { 
        for (j = 0; j < n; j++) { 
            adj[i][j] = 0; 
        } 
    } 
  
    printf("Enter number of flight connections (edges): "); 
    scanf("%d", &edges); 
  
    printf("\nEnter flight connections (City A City B) as numeric indices (0 to %d):\n", n - 1); 
    for (i = 0; i < edges; i++) { 
        printf("Edge %d: ", i + 1); 
   
 
   
 
        scanf("%d%d", &u, &v); 
        adj[u][v] = 1; 
        adj[v][u] = 1; // Since graph is undirected 
    } 
  
    // Display adjacency matrix 
    printf("\nAdjacency Matrix Representation:\n"); 
    for (i = 0; i < n; i++) { 
        for (j = 0; j < n; j++) { 
            printf("%d ", adj[i][j]); 
        } 
        printf("\n"); 
    } 
  
    // Initialize visited array 
    for (i = 0; i < n; i++) { 
        visited[i] = 0; 
    } 
  
    // Check connectivity using DFS starting from node 0 
    DFS(0); 
  
    // Check if all nodes are visited 
    int flag = 1; 
    for (i = 0; i < n; i++) { 
        if (!visited[i]) { 
            flag = 0; 
            break; 
        } 
    } 
  
    if (flag) 
        printf("\nThe graph is CONNECTED.\n"); 
    else 
        printf("\nThe graph is NOT CONNECTED.\n"); 
  
    return 0; 
} 
