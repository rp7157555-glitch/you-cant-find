#include <stdio.h>
#include <string.h>

// Function for Linear Search
void linearSearch(int arr[], int n, int key) {
    int found = 0;
    for (int i = 0; i < n; i++) {
        if (arr[i] == key) {
            found = 1;
            break;
        }
    }
    if (found)
        printf("Present\n");
    else
        printf("Not Present\n");
}

// Function for Binary Search
void binarySearch(int arr[], int n, int key) {
    int low = 0, high = n - 1, mid;
    int found = 0;

    while (low <= high) {
        mid = (low + high) / 2;
        if (arr[mid] == key) {
            found = 1;
            break;
        } else if (arr[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }

    if (found)
        printf("Present\n");
    else
        printf("Not Present\n");
}

int main() {
    int n, key, arr[50];
    char method[3];  // To store "ls" or "bs"

    printf("Enter number of students: ");
    scanf("%d", &n);

    printf("Enter roll numbers: ");
    for (int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    printf("Enter roll number to be searched: ");
    scanf("%d", &key);

    printf("Enter method (ls for Linear Search / bs for Binary Search): ");
    scanf("%s", method);

    if (strcmp(method, "ls") == 0)
        linearSearch(arr, n, key);
    else if (strcmp(method, "bs") == 0)
        binarySearch(arr, n, key);
    else
        printf("Invalid method! Use 'ls' or 'bs'.\n");

    return 0;
}
